<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.epoch.mapper.TopicMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.epoch.model.po.Topic">
        <id column="topic_id" property="topicId" />
        <result column="score" property="score" />
        <result column="label_ids" property="labelIds" />
        <result column="title" property="title" />
        <result column="bio" property="bio" />
        <result column="img_url" property="imgUrl" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        topic_id, score, label_ids, title, bio, img_url
    </sql>

</mapper>
